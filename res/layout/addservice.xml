<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1"
        android:background="@android:color/background_light">

    <ListView
            android:layout_width="372dp"
            android:layout_height="192dp"
            android:id="@+id/listView" android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="276dp"
            android:layout_height="wrap_content"  android:textColor="#111111"
            android:id="@+id/editText" android:layout_gravity="center_horizontal" android:hint="Time Length (minutes)"
            android:password="true" android:textAlignment="center"/>
    <EditText
            android:layout_width="277dp"
            android:layout_height="wrap_content"  android:textColor="#111111"
            android:id="@+id/editText2" android:layout_gravity="center_horizontal" android:hint="Price (0.00)"
            android:textAlignment="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button" android:layout_gravity="center_horizontal"/>
</LinearLayout>